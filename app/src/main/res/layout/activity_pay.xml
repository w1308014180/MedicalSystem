<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="账单"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pay_bill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="总金额"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"/>



            <TextView
                android:id="@+id/tv_totalMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#DF000000"
                android:textSize="18sp"
                android:text="500.00"
                android:gravity="right"
                android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="支付方式"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_pay_wx"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_pay_al"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_bank_card"
                android:layout_marginLeft="10dp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_medical_card"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取电子发票"
            android:textColor="@color/white"
            android:background="@color/purple_2"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</ScrollView>