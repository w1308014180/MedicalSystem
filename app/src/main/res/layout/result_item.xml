<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lyproject">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查项目："
            android:textSize="20sp"
            android:textColor="#DF000000"/>

        <TextView
            android:id="@+id/tv_result_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DF000000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_result_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lyproject"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查结果："
            android:textSize="20sp"
            android:textColor="#DF000000"/>

        <ImageView
            android:id="@+id/iv_result_pic"
            android:layout_below="@id/text"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_result_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ly_result_pic"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结果描述："
            android:textSize="20sp"
            android:textColor="#DF000000"/>

        <TextView
            android:id="@+id/tv_result_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#DF000000"
            android:textSize="20sp"
            android:layout_below="@id/text2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ly_result_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>



</RelativeLayout>